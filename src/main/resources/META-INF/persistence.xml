<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="hibernateDb" transaction-type="RESOURCE_LOCAL">
        <class>spring.model.Student</class>
        <class>spring.model.Group</class>
        <class>spring.model.Subject</class>
        <class>spring.model.ScheduleItem</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/hibernate"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="1946"/>

            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>